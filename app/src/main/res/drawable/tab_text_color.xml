<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false"  android:color="@color/color_666" />
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:color="@color/color_red" />
    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false"  android:color="@color/color_red" />
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="false"  android:color="@color/color_red" />
    <!-- Pressed -->
    <item android:state_selected="true" android:state_pressed="true"  android:color="@color/color_red" />
    <item android:state_pressed="true"  android:color="@color/color_666" />
    <item android:state_checked="true" android:color="@color/color_red"/>
</selector>